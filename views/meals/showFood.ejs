
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <title>Meal</title>
</head>
<header>
    <%- include('../partials/header') %>
</header>
<body>
    <div class="container">
        <h1 class="mb-4"><%= meal.name %></h1>
        <div class="text-muted mb-2"><%= meal.date.toLocaleDateString() %></div>
        <h2 class="mb-2"><%= meal.description %></h2>
        <button onclick="history.back()">Go Back</button>

        
        <div>
            <h6 class="d-inline"><%= food.description %></h6>
            <div class="d-inline">( <%= food.amountInGrams %> grams )</div>
            <% meal.foods.forEach(foodObj => { %>
                <% if (foodObj.id != food.id) { %>
                    <div><%= foodObj.description %> ( <%= foodObj.amountInGrams %> grams )</div>
    
                <% } %>
    
            <% }) %>

        </div>

        

        <h5>Nutrient Totals</h5>
        <table class="d-inline">
            <tr>
                <td class="h6">Food Totals</td>
            </tr>
            <% food.foodNutrients.forEach(nutrient => { %>
                <tr>
                    <td><%= nutrient.number %></td>
                    <td><%= nutrient.name %></td>
                    <td><%= nutrient.amount %> <%= nutrient.unitName %></td>
        
                </tr>
            <% }) %>
        </table>

        <table class="d-inline">
            <tr>
                <td class="h6">Meal Totals</td>
            </tr>
            <% meal.nutrientTotals.forEach(nutrient => { %>
                <tr>
                    <td><%= nutrient.number %></td>
                    <td><%= nutrient.name %></td>
                    <td><%= nutrient.amount %> <%= nutrient.unitName %></td>
        
                </tr>
            <% }) %>
        </table>
        

        <a href="/" class="btn btn-secondary">All Meals</a>
        <a href="/meals/compareToGuideline/<%= meal.id %>" class="btn btn-primary">Daily Guideline</a>
    </div>
</body>
</html>