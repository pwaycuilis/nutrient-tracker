<div class="form-group mb-3">
    <label for="mealID">Add to Meal:</label>
    <select name="mealID" id="mealID">
        <% meals.forEach(meal => { %>
            <option value="<%= meal.id %>"><%= meal.name %></option>
        <% }) %>

    </select>
</div>

<div class="form-group">
    <input type="hidden" id="foodItem" name="foodItem" value="<%= { food } %>">
</div>

<div class="form-group">
    <input type="hidden" id="fdcId" name="fdcId" value="<%= food.fdcId %>">
</div>


<div class="form-group mb-3">
    <label for="amountInGrams">Gram Weight</label>
    <input type="number" min="1" name="amountInGrams" id="amountInGrams" default-value="100" placeholder="100">
    
</div>
<button type="submit" class="btn btn-success">Add to Meal</button>