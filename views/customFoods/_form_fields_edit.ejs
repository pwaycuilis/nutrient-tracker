

<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= food.description %></textarea>
</div>


<div class="form-group">
    <label for="amountInGrams">amountInGrams</label>
    <input type="number" name="amountInGrams" id="amountInGrams" value="<%= food.amountInGrams %>">
</div>

<table>
    <tr>
        Include Nutrients: 
        <td>Number</td>
        <td>Name</td>
        <td>UnitName</td>
        <td>Amount</td>
        <td>Amount</td>
    </tr>
    <% food.foodNutrients.forEach(nutrient => { %>

    <div class="form-group d-flex">
    <tr>
        <td><%= nutrient.number %></td>
        <td><%= nutrient.name %></td>
        <td><%= nutrient.unitName %></td>
        <td>
            <input type="number" name="amount" id="amount" min="0" value="<%= nutrient.amount %>">
        </td>
    </tr>
    </div>
    <% }) %>
</table>

<a href="/" class="btn btn-danger">Back</a>
<button type="submit" class="btn btn-primary">Save</button>