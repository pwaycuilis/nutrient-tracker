
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<header>
    <%- include('../partials/header') %>
</header>
<body>
    <div class="container">
        <h1 class="mb-4">New Custom Food</h1>
        <form action="/foods/custom/nutrientAmounts" method="POST">
            
            <div class="form-group">
                <input type="hidden" id="description" class="form-control"><%= food.description %>
            </div>


                <div class="form-group">
                    <label for="amountInGrams">amountInGrams</label>
                    <input type="number" name="amountInGrams" id="amountInGrams" default-value="100">
                </div>

                <table>
                    <tr>
                        Include Nutrients: 
                        <td>Number</td>
                        <td>Name</td>
                        <td>UnitName</td>
                    </tr>
                    <% nutrientList.forEach(nutrient => { %>

                    <div class="form-group d-flex">
                    <tr>
                        <td><%= nutrient.nutrientNumber %></td>
                        <td><%= nutrient.nutrientName %></td>
                        <td><%= nutrient.unitName %></td>
                    </tr>
                    </div>
                    <% }) %>
                </table>

                <a href="/" class="btn btn-danger">Back</a>
                <button type="submit" class="btn btn-primary">Save</button>
            
        </form>
    </div>
</body>
</html>